<Window x:Class="disfr.UI.MultipleFilesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:disfr.UI"
        mc:Ignorable="d"
        Title="MultipleFilesDialog" Height="192" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock x:Name="textBlock" Margin="10,10,10,104" TextWrapping="Wrap" Text="You selected multiple files.  What do you want to do?"/>
        <RadioButton x:Name="singleTabRadioButton" Content="View all files on a single tab." HorizontalAlignment="Left" Margin="10,0,0,81" Height="18" VerticalAlignment="Bottom"/>
        <RadioButton x:Name="radioButton1" Content="View each file on a separate tab." HorizontalAlignment="Left" Margin="10,0,0,58" Height="18" VerticalAlignment="Bottom" IsChecked="True"/>
        <Button x:Name="okButton" Content="OK" Margin="0,0,90,10" HorizontalAlignment="Right" Width="75" Height="24" VerticalAlignment="Bottom" IsDefault="True" Click="okButton_Click"/>
        <Button x:Name="button1" Content="Cancel" Margin="0,0,10,10" Height="24" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" IsCancel="True"/>
    </Grid>
</Window>
